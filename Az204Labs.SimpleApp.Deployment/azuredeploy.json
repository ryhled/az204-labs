{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "simplePlanName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "az204-labs-simple-plan"
    },
    "simpleSiteName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "az204-labs-simple-app"
    },
    "simplePlanSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "siteName": {
      "type": "string",
      "defaultValue": "[concat('WebApp-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "The name of you Web Site."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "repoURL": {
      "type": "string",
      "defaultValue": "https://github.com/Azure-Samples/app-service-web-html-get-started.git",
      "metadata": {
        "description": "The URL for the GitHub repository that contains the project to deploy."
      }
    },
    "branch": {
      "type": "string",
      "defaultValue": "master",
      "metadata": {
        "description": "The branch of the GitHub repository to use."
      }
    }
  },
  "variables": {
    "AZ204_Labs_SimpleAppName": "[concat(parameters('simpleSiteName'), '-', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "name": "[parameters('simplePlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('simplePlanSkuName')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "[parameters('simplePlanName')]"
      },
      "properties": {
        "name": "[parameters('simplePlanName')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[variables('AZ204_Labs_SimpleAppName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('simplePlanName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('simplePlanName')))]": "Resource",
        "displayName": "[variables('AZ204_Labs_SimpleAppName')]"
      },
      "properties": {
        "name": "[variables('AZ204_Labs_SimpleAppName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('simplePlanName'))]"
      },
      "resources": [
        {
          "type": "sourcecontrols",
          "apiVersion": "2018-02-01",
          "name": "web",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('AZ204_Labs_SimpleAppName'))]"
          ],
          "properties": {
            "repoUrl": "[parameters('repoURL')]",
            "branch": "[parameters('branch')]",
            "isManualIntegration": true
          }
        }
      ]
    }],
  "outputs": {}
}
